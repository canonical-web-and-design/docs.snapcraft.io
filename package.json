{
  "scripts": {
    "test": "yarn run lint-scss && yarn run lint-python && yarn run test-python",
    "test-python": "coverage run --source=. -m unittest discover webapp/tests",
    "lint-python": "flake8 webapp && black --check --line-length 79 webapp",
    "lint-scss": "sass-lint static/sass/**/*.scss --verbose --no-exit",
    "build": "node-sass --include-path node_modules static/sass --output static/css && yarn run build-js && postcss --use autoprefixer --replace 'static/css/**/*.css'",
    "build-js": "mkdir -p static/js && cp node_modules/global-nav/dist/index.js static/js/global-nav.js",
    "watch": "watch -p 'static/sass/**/*.scss' -c 'yarn run build'",
    "clean": "rm -rf node_modules yarn-error.log static/css/**/*.css *.log *.sqlite _site/ build/ .jekyll-metadata .bundle",
    "serve": "./entrypoint 0.0.0.0:${PORT}"
  },
  "author": "Canonical webteam",
  "devDependencies": {
    "autoprefixer": "^7.1.3",
    "cookie-policy": "^1.0.5",
    "global-nav": "^1.1.4",
    "node-sass": "^4.5.3",
    "postcss-cli": "^4.1.0",
    "sass-lint": "^1.10.2",
    "vanilla-framework": "1.8.0",
    "watch-cli": "^0.2.2"
  }
}
